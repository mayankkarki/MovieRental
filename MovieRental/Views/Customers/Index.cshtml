@model IEnumerable<MovieRental.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<p>
    @Html.ActionLink("New Customer", "New", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>

@if (!Model.Any())
{
    <p>We don't have any customers yet</p>
}
else
{
    <table id="customersTable" class="table table-bordered table-hover">
        <tr>
            <th>
                Customer
            </th>
            <th>
                Membership Type
            </th>
            <th></th>
        </tr>
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(customer.Name, "Edit", new { id = customer.Id })
                </td>
                <td>
                    @customer.MembershipType.Name
                </td>
                <td>
                    <button customer-id="@customer.Id" class="btn-link js-delete">Delete</button>
                </td>
            </tr>
        }
    </table>
}
@section scripts
{
    <script>
        $(document).ready(new function () {
            $("#customersTable").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this customer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + button.attr("customer-id"),
                            method: "DELETE",
                            success: function () {
                                //console.log("success");
                                button.parents("tr").remove();
                            }
                        });
                    }
                });

                //if (confirm("Are you sure you want to delete this customer?")) {

                //}
            });
        });
    </script>
}