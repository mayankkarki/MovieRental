@model IEnumerable<MovieRental.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<p>
    @Html.ActionLink("New Customer", "New", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>

@if (!Model.Any())
{
    <p>We don't have any customers yet</p>
}
else
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                Customer
            </th>
            <th>
                Membership Type
            </th>
        </tr>
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(customer.Name, "Edit", new { id = customer.Id })
                </td>
                <td>
                    @customer.MembershipType.Name
                </td>
            </tr>
        }
    </table>
}