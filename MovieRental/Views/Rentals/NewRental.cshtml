
@{
    ViewBag.Title = "New Rental Form";
}

<h2>New Rental Form</h2>

<form id="newRental">
    @*shortcut to create div form group with label and input textbox
        div.form-group>label+input[type='text'].form-control*@

    <div class="form-group">
        <label>Customer</label>
        @*class tt-container used to show label vertically oriented with textbox*@
        <div class="tt-container">
            @*name attribute is used because jquery vaidator required it
                data-rule is syntax prefix and after that validate method name is appended
                required is validator attribute                *@
            <input id="customer" name="customer" data-rule-validateCustomer="true" required type="text" value="" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label>Movie</label>
        <div class="tt-container">
            <input id="movie" name="movie" data-rule-validateMovies="true" type="text" value="" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <ul id="movies" class="list-group"></ul>
        </div>
    </div>

    <button class="btn btn-primary">Submit</button>
</form>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval");

    <script>
        $(document).ready(function () {
            var vm = {
                movieIds: []
            };

            //typeahead code to databound input control
            var customers = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/customers?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#customer').typeahead({
                minLength: 3,
                highlight: true
            }, {
                name: 'customers',
                display: 'name',
                source: customers
            }).on("typeahead:select", function (e, customer) {
                vm.customerId = customer.id;
            });

            var movies = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/movies?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#movie').typeahead({
                minLength: 3,
                highlight: true
            }, {
                name: 'movies',
                display: 'name',
                source: movies
            }).on("typeahead:select", function (e, movie) {
                //add li item to show movie list
                $("#movies").append("<li class='list-group-item'>" + movie.name + "</li>");

                //clear typeahead control value
                $("#movie").typeahead("val", "");

                //add id to array
                vm.movieIds.push(movie.id);
            });

            //add jquery validator method
            $.validator.addMethod("validateCustomer", function () {
                return vm.customerId && vm.customerId != 0;
            }, "Please select a valid customer");

            $.validator.addMethod("validateMovies", function () {
                return vm.movieIds && vm.movieIds.length > 0;
            }, "Please select at least one movie");

            //this variable name is used to reset form
            var validator = $("#newRental").validate({
                submitHandler: function () {

                    $.ajax({
                        url: "/api/rentals",
                        method: "post",
                        data: vm
                    })
                        .done(function () {
                            //show toast notifcation
                            toastr.success("Rental created successfully");

                            //reset form after submit
                            $("#customer").typeahead("val", "");
                            $("#movie").typeahead("val", "");

                            $("#movies").empty();

                            vm = { movieIds: [] };

                            validator.resetForm();
                        })
                        .fail(function () {
                            toastr.error("Some error occurred");
                        });

                    //false is returned to cancel form submit call, because we used
                    //ajax call to submit form data here
                    return false;
                }
            });
        });
    </script>
}


