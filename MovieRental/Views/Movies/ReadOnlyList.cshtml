@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table id="moviesTable" class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>
                Movie
            </td>
            <td>
                Genre
            </td>           
        </tr>
    </thead>
    <tbody>     
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var jTable = $("#moviesTable").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"                      
                    },
                    {
                        data : "genre.name"
                    }
                ]
            });           
        });
    </script>
}